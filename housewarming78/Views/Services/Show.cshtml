@model RealEstate
@{
    ViewBag.Title = Model.MetaTitle;
    ViewBag.Description = Model.MetaDescription;
    ViewBag.Keywords = Model.MetaKeywords;
}

<div class="jumbotron">
    <div class="container" style="padding-top: 60px; padding-bottom: 60px;">
        <h1 class="jumbotron-heading text-center">
            <strong>
                @ViewBag.Title
            </strong>
        </h1>
    </div>
    <div class="bg-light">
        <div class="container bg-light">
            <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">

                    <div class="carousel-item active">
                        <img src="~/img/@Model.Id.ToString("N").ToUpper()/@Model.TitleImagePath" class="d-block w-100" alt="@Model.TitleImagePath" style="height: 700px !important;">
                    </div>
                    @if (Model.ImagesPaths.Any())
                    {
                        foreach (string path in Model.ImagesPaths)
                        {
                            if (path == "System.Collections.Generic.List`1[System.String]") continue;
                            <div class="carousel-item">
                                <img src="~/img/@Model.Id.ToString("N").ToUpper()/@path" class="d-block w-100" alt="@path" style="height: 700px !important;">
                            </div>
                        }
                    }
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Предыдущий</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Следующий</span>
                </button>
            </div>
        </div>
    </div>
    <div class="container pt-5 pb-5">
        <h2 class="jumbotron-heading">
            <strong>
                @Model.Title
            </strong>
        </h2>
        <p>Цена: @Model.Price</p>
        <p>@Model.Address</p>
    </div>
    <div class="container pt-5 pb-5">
        <div class="row">
            <div class="col-6 col-md-4">
                <div class="row">
                    <span class="text-muted">Общая площадь</span>
                    <span>
                        <strong>
                            @Model.TotalArea&nbsp;м²
                        </strong>
                    </span>
                </div>
                <div class="row pt-2">
                    <span class="text-muted">Этаж</span>
                    <span>
                        <strong>
                            @Model.Floor из @Model.EnFloorsInTheHouse
                        </strong>
                    </span>
                </div>
            </div>
            <div class="col-6 col-md-4">
                <div class="row">
                    <span class="text-muted">Жилая площадь</span>
                    <span>
                        <strong>
                            @Model.LivingSpace&nbsp;м²
                        </strong>
                    </span>
                </div>
                <div class="row pt-2">
                    <span class="text-muted">Год постройки</span>
                    <span>
                        <strong>
                            @Model.YearOfConstruction
                        </strong>
                    </span>
                </div>
            </div>
            <div class="col-6 col-md-4">
                <div class="row">
                    <span class="text-muted">Площадь кухни</span>
                    <span>
                        <strong>
                            @Model.KitchenArea&nbsp;м²
                        </strong>
                    </span>
                </div>
                <div class="row pt-2"></div>
            </div>
        </div>
    </div>
    <div class="container pt-5 pb-5">
        @Model.Text
    </div>
    <div class="container pt-5 pb-5">
        <div class="row">
            <div class="col-6">
                <div class="container">
                <h2 class="jumbotron-heading text-center"><strong>О квартире</strong></h2>
                    <ul class="list-group list-group-flush pt-5">
                    <li class="list-group-item">
                        <div class="row">
                            <div class="col text-start text-muted">Тип жилья</div>
                            <div class="col text-end">@Model.HousingType</div>
                        </div>
                    </li>
                    <li class="list-group-item">
                        <div class="row">
                            <div class="col text-start text-muted">Общая площадь</div>
                            <div class="col text-end">@Model.TotalArea</div>
                        </div>
                    </li>
                    <li class="list-group-item">
                        <div class="row">
                            <div class="col text-start text-muted">Жилая площадь</div>
                            <div class="col text-end">@Model.LivingSpace</div>
                        </div>
                    </li>
                    <li class="list-group-item">
                        <div class="row">
                            <div class="col text-start text-muted">Площадь кухни</div>
                            <div class="col text-end">@Model.KitchenArea</div>
                        </div>
                    </li>
                    <li class="list-group-item">
                        <div class="row">
                            <div class="col text-start text-muted">Высота потолков</div>
                            <div class="col text-end">@Model.CeilingHeight</div>
                        </div>
                    </li>
                    <li class="list-group-item">
                        <div class="row">
                            <div class="col text-start text-muted">Санузел</div>
                            <div class="col text-end">@Model.Bathroom</div>
                        </div>
                    </li>
                    <li class="list-group-item">
                        <div class="row">
                            <div class="col text-start text-muted">Вид из окон</div>
                            <div class="col text-end">@Model.ViewFromTheWindows</div>
                        </div>
                    </li>
                    <li class="list-group-item">
                        <div class="row">
                            <div class="col text-start text-muted">Ремонт</div>
                            <div class="col text-end">@Model.Repair</div>
                        </div>
                    </li>
                </ul>
                </div>
            </div>
            <div class="col-6">
                <div class="container">
                <h2 class="jumbotron-heading text-center"><strong>О доме</strong></h2>
                    <ul class="list-group list-group-flush pt-5">
                    <li class="list-group-item">
                        <div class="row">
                            <div class="col text-start text-muted">Год постройки</div>
                            <div class="col text-end">@Model.YearOfConstruction</div>
                        </div>
                    </li>
                    <li class="list-group-item">
                        <div class="row">
                            <div class="col text-start text-muted">Строительная серия</div>
                            <div class="col text-end">@Model.ConstructionSeries</div>
                        </div>
                    </li>
                    <li class="list-group-item">
                        <div class="row">
                            <div class="col text-start text-muted">Количество лифтов</div>
                            <div class="col text-end">@Model.NumberOfElevators</div>
                        </div>
                    </li>
                    <li class="list-group-item">
                        <div class="row">
                            <div class="col text-start text-muted">Тип дома</div>
                            <div class="col text-end">@Model.HouseType</div>
                        </div>
                    </li>
                    <li class="list-group-item">
                        <div class="row">
                            <div class="col text-start text-muted">Тип перекрытий</div>
                            <div class="col text-end">@Model.FloorType</div>
                        </div>
                    </li>
                    <li class="list-group-item">
                        <div class="row">
                            <div class="col text-start text-muted">Парковка</div>
                            <div class="col text-end">@Model.Repair</div>
                        </div>
                    </li>
                    <li class="list-group-item">
                        <div class="row">
                            <div class="col text-start text-muted">Подъезды</div>
                            <div class="col text-end">@Model.Entrances</div>
                        </div>
                    </li>
                    <li class="list-group-item">
                        <div class="row">
                            <div class="col text-start text-muted">Отопление</div>
                            <div class="col text-end">@Model.Heating</div>
                        </div>
                    </li>
                    <li class="list-group-item">
                        <div class="row">
                            <div class="col text-start text-muted">Аварийность</div>
                            <div class="col text-end">@Model.AccidentRate</div>
                        </div>
                    </li>
                    <li class="list-group-item">
                        <div class="row">
                            <div class="col text-start text-muted">Газоснабжение</div>
                            <div class="col text-end">@Model.GasSupply</div>
                        </div>
                    </li>
                </ul>
            </div>
            </div>
        </div>
    </div>
</div>


